puts &quot;Enter a number&quot;
number = gets.chomp .to_i
    
def ordinal(number)
  val1 = number % 10
  
  if number == 11 || number == 12 || number == 13
    return &quot;th&quot;
  elsif val1 == 1 
    return &quot;st&quot;
  elsif val1 == 2
    return &quot;nd&quot;
  elsif val1 == 3
    return &quot;rd&quot; 
  else 
    return &quot;th&quot;
  end
end

puts &quot;#{(number)} is the #{(number)}#{ordinal(number)} number&quot;</code></pre>
